<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categoria/criar" class="btn btn-success">
    Nova
</a>

<div>
    {{#each categorias }}
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{ nome }}</h4>
                <small>{{ nome_slug }}</small>
                <a href="/admin/categoria/editar/{{ _id }}" class="btn btn-warning btn-sm">
                    Editar</a>
                <a href="/admin/categoria/deletar/{{ _id }}" class="btn btn-danger btn-sm">
                    Deletar</a>
            </div>
        </div>
    {{ else }}
        <div class="card mt-4">
            <div class="card-body">
                <h4>Nenhuma categoria encontrada</h4>
                <small>Sem nada para mostrar!</small>
            </div>
        </div>
    {{/each}}
</div>