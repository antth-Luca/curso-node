{{> _form_errors }}

<form action="/registrar" method="POST">
    <h2>Bem-vindo(a)!</h2>
    <h3>Criando uma conta BlogExpress</h3>
    <hr>

    <label for="nome">Primeiro nome: </label>
    <input type="text" id="nome" name="nome" placeholder="Primeiro nome" class="form-control" required>

    <label for="sobrenome">Sobrenome: </label>
    <input type="text" id="sobrenome" name="sobrenome" placeholder="Sobrenome" class="form-control" required>

    <label for="data_nasc">Data de nascimento: </label>
    <input type="date" id="data_nasc" name="data_nasc" class="form-control" required>

    <label for="email">Email: </label>
    <input type="text" id="email" name="email" placeholder="example@mail.com" class="form-control" required>

    <label for="senha">Senha: </label>
    <input type="password" id="senha" name="senha" placeholder="Digite sua senha" class="form-control" required>

    <label for="senha2">Senha novamente: </label>
    <input type="password" id="senha2" name="senha2" placeholder="Confirme sua senha" class="form-control" required>

    <div class="form-check">
        <input type="checkbox" id="check" name="check" class="form-check-input">
        <label for="check" class="form-check-label">
            Concordo com os termos e pol√≠tica de privacidade
        </label>
    </div>

    <hr>
    <button class="btn btn-success">Criar</button>
</form>