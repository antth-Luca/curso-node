<h2>Lista de postagens:</h2>
<hr>
<a href="/admin/postagem/criar" class="btn btn-success">
    Nova
</a>

<div>
    {{#each postagens }}
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{ titulo }}</h4>
                <h6>{{ titulo_slug }}</h6>
                <small>{{ categoria.nome }}</small>
                <p>
                    {{ conteudo }}
                </p>
                <a href="/admin/postagem/editar/{{ _id }}" class="btn btn-warning btn-sm">
                    Editar</a>
                <a href="/admin/postagem/deletar/{{ _id }}" class="btn btn-danger btn-sm">
                    Deletar</a>
            </div>
        </div>
    {{ else }}
        <div class="card mt-4">
            <div class="card-body">
                <h4>Nenhuma postagem encontrada</h4>
                <small>Sem nada para mostrar!</small>
            </div>
        </div>
    {{/each}}
</div>