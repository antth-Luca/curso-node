<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categoria/criar" class="btn btn-info">
    Nova
</a>

<div>
    {{#each categorias }}
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{ nome }}</h4>
                <small>{{ nome_slug }}</small>
                <a href="/admin/categoria/editar/{{ id }}" class="btn btn-warning btn-sm">
                    Editar</a>
            </div>
        </div>
    {{/each}}
</div>