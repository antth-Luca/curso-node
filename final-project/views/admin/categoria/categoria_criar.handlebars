{{> _form_errors }}

<form action="/admin/categoria/criar" method="POST">
    <h3>
        Criando uma nova categoria
    </h3>
    <hr>

    <label for="nome">Nome: </label>
    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control">

    <label for="nome_slug">Nome Slug: </label>
    <input type="text" id="nome_slug" name="nome_slug" placeholder="Nome Slug da categoria" class="form-control">

    <hr>
    <button class="btn btn-success">Criar</button>
</form>